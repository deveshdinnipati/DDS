#include<stdio.h>
#include<stdlib.h>
int main()
{
    int n;
    printf("Enter the size of the array :");
    scanf("%d",&n);
    int *arr= (int*)malloc(n *sizeof(int));
    for(int i=0; i<n; i++)
    {
        printf("\nEnter the value at arr[%d] index :",i);
        scanf("%d",&arr[i]);
    }
    printf("\nall values of array :");
    for(int i=0; i<n; i++)
    {
    printf("%d\n", arr[i]);
    }
    free(arr);
    return 0;
}
